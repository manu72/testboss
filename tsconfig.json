{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "types": ["jest", "node", "js-yaml"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./node_modules/playwright", "./node_modules/js-yaml"],
    "paths": {
      "@testboss/cli/*": ["./packages/cli/src/*"],
      "@testboss/runtime/*": ["./packages/runtime/src/*"],
      "@testboss/ai/*": ["./packages/ai/src/*"]
    }
  },
  "include": ["packages/**/*.ts", "jest.config.js"],
  "exclude": ["node_modules", "dist"]
}